#include <iostream>

 using namespace std;

class Time 
{

public:
int hrs, mi, se;
long d;
  
void getTime () 
  {
    
cout << "Hour " << "\t";
    
cin >> hrs;
    
cout << "Minute " <<"\t";
    
cin >> mi;
    
cout << "Second " << "\t";
    
cin >> se;
  
} 
void showTime () 
  {
    
cout << "The time is = " << hrs << ":" << mi << ":" << se << endl;
    
d = hrs * 3600 + mi * 60 + se;
    
cout << "total time in second is " << d << endl;

} 
 
};


int
main () 
{
  
cout << "Hello world!" << endl;
  
Time t;
  
t.getTime ();
  
t.showTime ();
  
return 0;

}


